<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#E9E0E0"/>

    <!-- Oval/rounded corners -->
    <corners android:radius="50dp"/>

    <!-- Border/Stroke -->
    <stroke
        android:width="2dp"
        android:color="#808080"/>

    <!-- Inner padding -->
    <padding
        android:left="12dp"
        android:top="8dp"
        android:right="12dp"
        android:bottom="8dp"/>
</shape>